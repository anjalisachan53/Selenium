pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    triggers{
        cron('H H(8-15)/2 * * 1-5')
    }

    stages {
        stage('Build') {
            steps {
                dir('SeleniumProject (2)/SeleniumProject/SeleniumProject') {
                    bat 'mvn install'
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('SeleniumProject (2)/SeleniumProject/SeleniumProject') {
                    bat 'mvn -Dtest=AmazonTestNg test'
                }
            }
            post {
                failure {
                    echo 'Selenium tests failed! Failing the pipeline.'
                }
            }
        }
        stage('Clean'){
            steps{
                 dir('SeleniumProject (2)/SeleniumProject/SeleniumProject') {
                    bat 'mvn clean'
                }
            }
        }
    }
}


pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    stages {
        stage('Build') {
            steps {
                dir('SeleniumProject (2)/SeleniumProject/SeleniumProject') {
                    bat 'mvn install'
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('SeleniumProject (2)/SeleniumProject/SeleniumProject') {
                    bat 'mvn -Dtest=AmazonTestNg test'
                }
            }
            post {
                failure {
                    echo 'Selenium tests failed! Failing the pipeline.'
                }
            }
        }
    }
      post {
        always {
            // Clean up any temporary files or resources
            stage('Clean Up') {
                steps {
                    bat 'mvn clean'
                }
            }
        }
    }    
}


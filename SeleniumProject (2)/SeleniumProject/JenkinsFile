pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
               
                git 'https://github.com/anjalisachan53/Selenium/tree/main/SeleniumProject (2)/SeleniumProject/SeleniumProject'
            }
        }
        
        stage('Build') {
            steps {
               
                bat 'mvn install'
            }
        }
        
        stage('Test') {
            steps {
               
                bat 'mvn -Dtest=AmazonTest test'
            }
            post {
                
                failure {
                    echo 'Selenium tests failed! Failing the pipeline.'
                    currentBuild.result = 'FAILED'
                }
            }
        }
    }
    
    post {
        always {
            
            stage('Clean Up') {
                steps {
                    bat 'mvn clean'
                }
            }
        }
    }
}

pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    stages {
        stage('Build') {
            steps {
                dir('SeleniumProject (2)/SeleniumProject/SeleniumProject') {
                    bat 'mvn install'
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('SeleniumProject (2)/SeleniumProject/SeleniumProject/src/test/java/Test') {
                    bat 'mvn -Dtest=AmazonTest test'
                }
            }
            post {
                failure {
                    echo 'Selenium tests failed! Failing the pipeline.'
                }
            }
        }
        }
        
    }


pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    stages {
       
        
        stage('Build') {
            steps {
               
                bat 'mvn install'
            }
        }
        
        stage('Test') {
            steps {
               
                bat 'mvn -Dtest=AmazonTest test'
            }
            post {
                
                failure {
                    echo 'Selenium tests failed! Failing the pipeline.'
                    currentBuild.result = 'FAILED'
                }
            }
        }
    }
    
   post {
        always {
            // Clean up temporary files or resources
            steps {
                bat 'mvn clean' 
                }
            }
        }
    }


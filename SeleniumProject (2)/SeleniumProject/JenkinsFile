pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from your GitHub repository
                git ''
            }
        }
        
        stage('Build') {
            steps {
                // Use Maven to compile the Selenium project
                bat 'mvn clean test-compile'
            }
        }
        
        stage('Test') {
            steps {
                // Execute the AmazonTest.java test case
                bat 'mvn -Dtest=AmazonTest test'
            }
            post {
                // Fail the pipeline if any tests fail
                failure {
                    echo 'Selenium tests failed! Failing the pipeline.'
                    currentBuild.result = 'FAILED'
                }
            }
        }
    }
    
    post {
        always {
            // Clean up any temporary files or resources
            stage('Clean Up') {
                steps {
                    bat 'mvn clean'
                }
            }
        }
    }
}
